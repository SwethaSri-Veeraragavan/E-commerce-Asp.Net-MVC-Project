<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2 ">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded align-items-center">
                        <a asp-action="Details" asp-route-id="@product.ProductId">
                            <img src="@product.ImageUrl" class="Shop-Card-img card-img-top rounded " />
                        </a>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title  text-dark opacity-75 text-uppercase text-center">@product.ProductName</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    <span class=" text-decoration-line-through">MRP: &#8377;@product.Mrp</span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    <span>Price: &#8377; @product.Price</span>
                                </p>
                            </div>
                            <div class="d-flex">
                                <div class="row m-auto d-flex">
                                    <form method="post" asp-controller="Cart" asp-action="AddToCart">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button type="submit" class="btn btn-success bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                            Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

