@model IEnumerable<Product>

@if (Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card boder-0 p-3 shadow border rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" alt="Product Image">
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.ProductName</p>
                                    <p class="card-text text-center">Price: &#8377;@product.Price</p>
                                    @* <a href="@Url.Action("Details", "Home", new { id = product.ProductId })" class="btn btn-success form-control">View Details</a> *@
                                    <div>
                                        <a asp-action="Details" asp-controller="Home" asp-route-Id="@product.ProductId" class="btn btn-success bg-gradient border-0 form-control">View Details</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products found.</p>
}
